{
    "name": "Rem chrome",
    "version": "1.0",
    "description": "Chrome extension for Rem",
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "contextMenus"
    ],
    "background": {
        "scripts": ["backgroundScript.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}